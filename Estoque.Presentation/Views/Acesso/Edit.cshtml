@model Estoque.Presentation.Models.Acesso;

@{
    ViewData["Title"] = "Fazer Logoff";
    Layout = "../Shared/_Layout.cshtml";
}

<h1>Deslogar</h1>

@if (ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<hr />
<form asp-action="Create" method="post">
    <div class=form-group>
        <label class="control-label">Nome do Usuário</label>
        <input type="text" class=form-control name="nome" />
        <span class=text-danger></span>
    </div>
    <div class=form-group>
        <label class="control-label">Senha</label>
        <input type="password" class=form-control name="password" />
        <span class=text-danger></span>
    </div>
    <div class="form-group">
        <a class="btn btn-danger" class="btn btn-danger" asp-action=Edit method=post>Fazer Logoff</a>
        <span class="text-danger"></span>
    </div>
    <div>
        <a class="btn btn-success" asp-action=Index asp-controller=Home>Voltar para a Página Inicial</a>
    </div>
</form>