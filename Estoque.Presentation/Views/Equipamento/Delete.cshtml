@model Estoque.Domain.Entities.Equipamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

@if(ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<h3>Você Tem Certeza Que Quer Deletar esses Dados?</h3>
<div>
    <h4>Equipamento</h4>
    <hr />
    <dl class=row>
        <dt class=col-sm-2>Id</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.Id)</dd>

        <dt class=col-sm-2>Nome</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.Nome)</dd>

        <dt class=col-sm-2>Quantidade em Estoque</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.QtdEstoque)</dd>

        <dt class=col-sm-2>Quantidade Total</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.QtdTotal)</dd>

        <dt class=col-sm-2>Site</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.Site)</dd>
    </dl>

    <form asp-action=DeleteConfirmed>
        <input type="hidden" asp-for=Id />
        <a class="btn btn-danger">Excluir Cadastro</a>        
    </form>


    <input type="submit" value="Voltar Para a Lista" class="btn btn-success" asp-action=Index asp-controller=Equipamento />
    <br />
    <input type="submit" value="Voltar Para a Página Inicial" class="btn btn-success" asp-action=Index asp-controller=Home />
</div>