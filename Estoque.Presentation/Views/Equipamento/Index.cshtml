@model IEnumerable<Estoque.Domain.Entities.Equipamento>

@{
    ViewData["Title"] = "Lista de Equipamentos";
}

@if (ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<form>
    <h1>Lista de Equipamentos</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome do Equipamento</th>
                <th>Quantidade Disponível</th>
                <th>Quantidade Total</th>
                <th>Site</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.QtdEstoque)</td>
                    <td>@Html.DisplayFor(modelItem => item.QtdTotal)</td>
                    <td>@Html.DisplayFor(modelItem => item.Site)</td>
                    <td>
                        <input type="submit" value="Editar Dados" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"/> |
                        <input type="submit" value="Detalhes" class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"/> |
                        <input type="submit" value="Deletar Dados" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"/>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <input type="submit" value="Cadastrar Novo" class="btn btn-success" asp-action="Create"/>
    </p>
</form>