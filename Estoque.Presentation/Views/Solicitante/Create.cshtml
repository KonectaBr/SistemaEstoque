@model Estoque.Domain.Entities.Solicitante

@{
    ViewData["Title"] = "Cadastrar Equipamento";
}

<h1>Cadastrar</h1>

@if (ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<h4>Solicitante</h4>
<hr />
<form asp-action="Create">
    <div class=form-group>
        <label asp-for="Nome" class="control-label">Nome do Solicitante</label>
        <input asp-for=Nome class=form-control />
        <span asp-validation-for=Nome class=text-danger></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar Solicitante" class="btn btn-primary" asp-action=Create method=post />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
    <br />
    <a asp-controller="Home" asp-action=Index>Voltar Para a Página Inicial</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}