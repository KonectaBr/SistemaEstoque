@model Estoque.Domain.Entities.Solicitante;

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

@if(ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<h3>Você Tem Certeza Que Quer Deletar esses Dados?</h3>
<div>
    <h4>Solicitante</h4>
    <hr />
    <dl class=row>
        <dt class=col-sm-2>Id</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.Id)</dd>

        <dt class=col-sm-2>Nome</dt>
        <dd class=col-sm-10>@Html.DisplayFor(model => model.Nome)</dd>
    </dl>

    <form asp-action=DeleteConfirmed>
        <input type="hidden" asp-for=Id />
        <input type="submit" value="Excluir Cadastro" class="btn btn-danger" /> | 
        <a asp-action=Index>Back to List</a>
    </form>
</div>