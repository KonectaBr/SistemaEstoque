@model Estoque.Domain.Entities.Solicitante

@{
    ViewData["Title"] = "Editar Dados";
}

<h1>Editar</h1>

@if (ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<h4>Equipamento</h4>
<hr />
<form asp-action=Edit>
    <div asp-validation-summary=ModelOnly class=text-danger></div>
    <div class=form-group>
        <label asp-for="Nome" class="control-label">Nome do Equipamento</label>
        <input asp-for=Nome class=form-control />
        <span asp-validation-for=Nome class=text-danger></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Editar Dados" class="btn btn-primary" asp-action=Edit method=post />
    </div>
</form>

<div>
    <a asp-action=Index>Voltar para a Lista</a>
    <a asp-controller=Home asp-action=Index>Voltar Para a Página Inicial</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }
}