@model IEnumerable<Estoque.Domain.Entities.Solicitante>

@{
    ViewData["Title"] = "Lista de Solicitantes";
}

@if(ViewBag.Erro != null)
{
    <h4>@ViewBag.Erro</h4>
}

<form>
    <h1>Lista de Solicitantes</h1>

    <p>
        <a class="btn btn-success" asp-action="Create">Cadastrar Novo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome do Solicitante</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar Dados</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar Dados</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>