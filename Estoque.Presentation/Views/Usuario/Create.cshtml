@model Estoque.Domain.Entities.Usuario;

@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<h1>Cadastro</h1>

<h4>Usuário</h4>
<hr />
<div>
    <form asp-action=Create>
        <div class=form-group>
            <label asp-for="Nome" class="control-label">Nome do Usuário</label>
            <input asp-for=Nome class=form-control />
            <span asp-validation-for=Nome class=text-danger></span>
        </div>
        <div class=form-group>
            <label asp-for="Senha" class="control-label">Senha</label>
            <input asp-for=Senha type="password" class=form-control />
            <span asp-validation-for=Senha class=text-danger></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Cadastrar Usuário" class="btn btn-primary" asp-action=Create method=post />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar para a Página de Login</a>
    <br />
    <a asp-controller="Home" asp-action=Index>Voltar Para a Página Inicial</a>
</div>